<h1>New Game</h1>
<p><% @letters.each do |letter| %>
  <span class="letter"><%= letter.capitalize %></span>
<% end%></p>

<h2>What's the longest word you can find?</h2>
<form action="/score" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<%= hidden_field_tag :letters, @letters %>
  <input type="text" name="answer" placeholder="type it here">
  <input type="submit">
</form>
